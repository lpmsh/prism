{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "dotenv -e ../../.env -- bun run --watch src/index.ts",
    "build": "dotenv -e ../../.env -- bun build src/index.ts --outdir=dist --target=bun",
    "start": "dotenv -e ../../.env -- bun run dist/index.js",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "dotenv -e ../../.env -- bun run test/run.ts",
    "test:destroy": "dotenv -e ../../.env -- bun run test/run.ts --destroy"
  },
  "dependencies": {
    "@daytonaio/sdk": "^0.138.0",
    "@octokit/auth-app": "^8.1.2",
    "@octokit/webhooks": "^14.2.0",
    "hono": "^4.6.0",
    "octokit": "^5.0.5",
    "@repo/db": "*"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  }
}
